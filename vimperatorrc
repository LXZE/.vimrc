
" map for facebook:
"  <F1> : show notification bar
"  <F3> : focus search box
nmap -urls facebook\\.com <F1> :js gBrowser.contentDocument.querySelector('#fbNotificationsJewel .jewelButton').click()<cr>
nmap -urls facebook\\.com <F3> :js setTimeout(function() { ['click','focus'].forEach(function(n){gBrowser.contentDocument.querySelector('#q')[n]()}); }, 0);<cr>

" smoother scrolling
set scroll=5
